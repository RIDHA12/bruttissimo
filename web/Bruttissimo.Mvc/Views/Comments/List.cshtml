@model IList<CommentModel>
<ol class="comments">
	@foreach (CommentModel comment in Model)
	{
        <li class="comment">
            <section>profile pic (or blank)</section>
            <section>
                <span>username</span>
				<span>message</span>
            </section>
			<section>actions (like, comment)</section>
            @if (comment.HasReplies)
            {
                @Html.Partial("List", comment.Replies)
            }
        </li>
	}
</ol>